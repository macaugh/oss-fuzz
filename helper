#!/bin/bash

# OSS-Fuzz helper script with virtual environment
# This wrapper automatically activates the venv and runs the helper.py script

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_DIR="$SCRIPT_DIR/oss-fuzz-venv"

# Create venv if it doesn't exist
if [ ! -d "$VENV_DIR" ]; then
    echo "Creating virtual environment..."
    python3 -m venv "$VENV_DIR"
    source "$VENV_DIR/bin/activate"
    pip install --upgrade pip docker pyyaml
fi

# Activate venv and run helper.py
source "$VENV_DIR/bin/activate"
python "$SCRIPT_DIR/infra/helper.py" "$@"